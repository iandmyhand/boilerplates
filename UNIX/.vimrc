set enc=UTF-8
set fileencodings=UTF-8
set nocompatible
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set cindent
set autoindent
set smartindent
set history=15
set ruler
set showcmd
set background=dark
set paste
set nu
set ai
set mouse=c
set clipboard=unnamedplus

map <F2> :set mouse=a<CR>
map <F3> :set mouse=c<CR>
